<%= form_with(model: @gallery, local: true, html: { multipart: true }) do |f| %>
  <% if @gallery.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@gallery.errors.count, "error") %> prohibited this gallery from being saved:</h4>
      <ul>
        <% @gallery.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 3, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, [["Published (Public)", "published"], ["Draft", "draft"], ["Personal", "personal"]], {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :cover_image %>
    <%= f.file_field :cover_image, class: "form-control" %>
    <% if @gallery.cover_image.attached? %>
      <p class="mt-2">Current cover image:</p>
      <%= image_tag url_for(@gallery.cover_image), style: "max-height: 150px;" %>
    <% end %>
  </div>

  <%= f.submit class: "btn btn-primary" %>
<% end %>

