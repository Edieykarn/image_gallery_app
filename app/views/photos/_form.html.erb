<%= form_with(model: [@gallery, @photo], local: true, html: { multipart: true }) do |f| %>
  <% if @photo.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @photo.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

   <div class="form-group">
    <%= f.label :image, "Select Photo" %>
    <%= f.file_field :image, accept: "image/*", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image, "Upload Photo" %>
    <%= f.file_field :image, accept: "image/*", class: "form-control" %>
  </div>

  <%= f.submit "Upload Photo", class: "btn btn-primary" %>
  <%= link_to "Cancel", @gallery, class: "btn btn-secondary" %>
<% end %>
