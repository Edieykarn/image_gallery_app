<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h3>Edit Photo</h3>
        </div>
        <div class="card-body">
          <% if @photo.image.attached? %>
            <div class="text-center mb-4">
              <%= image_tag url_for(@photo.thumbnail), class: "img-fluid rounded", style: "max-height: 300px;" %>
              <p class="text-muted mt-2">Current photo</p>
            </div>
          <% end %>

          <%= form_with model: [@gallery, @photo], local: true, multipart: true do |form| %>
            <% if @photo.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@photo.errors.count, "error") %> occurred:</h4>
                <ul class="mb-0">
                  <% @photo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- ADD THIS: Image upload field -->
            <div class="mb-3">
              <%= form.label :image, "Replace Photo (optional)", class: "form-label" %>
              <%= form.file_field :image, class: "form-control", accept: "image/*" %>
              
            </div>

            <div class="mb-3">
              <%= form.label :title, class: "form-label" %>
              <%= form.text_field :title, class: "form-control", placeholder: "Optional: Add a title for this photo" %>
            </div>

            <div class="mb-3">
              <%= form.label :description, class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 3, 
                                 placeholder: "Optional: Add a description" %>
            </div>

            <div class="d-flex gap-2">
              <%= form.submit "Update Photo", class: "btn btn-primary" %>
              <%= link_to "Cancel", gallery_photo_path(@gallery, @photo), class: "btn btn-outline-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>